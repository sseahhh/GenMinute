# ==================== Flask 설정 ====================
# Flask 앱 시크릿 키 (세션 암호화에 사용)
# 생성 방법: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your_flask_secret_key_here

# Flask 디버그 모드 (개발 환경에서만 true)
FLASK_DEBUG=false

# Flask 포트 번호
FLASK_PORT=5050

# ==================== Firebase 설정 ====================
# Firebase 콘솔에서 프로젝트 설정 > 일반 > 내 앱에서 확인 가능
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# ==================== API 키 ====================
# OpenAI API 키 (벡터 DB 임베딩용)
OPENAI_API_KEY=your_openai_api_key

# Google Gemini API 키 (STT, 채팅, 요약용)
GOOGLE_API_KEY=your_google_api_key

# ==================== 관리자 설정 ====================
# 관리자 이메일 (쉼표로 구분, 공백 없이)
ADMIN_EMAILS=admin@example.com,admin2@example.com

# ==================== 로깅 설정 ====================
# 로그 레벨 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
